{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "create build directory",
        "type": "shell",
        "options": {
            "cwd": "${workspaceFolder}"
        },
        "command": "mkdir -p build", //this command creates a build directory if it does not exist
      },
      {
        "label": "(debug) cmake debug",
        "type": "shell",
        "options": {
            "cwd": "${workspaceFolder}/build"
        },
        "command": "cmake",
        "args": [
            "-DCMAKE_BUILD_TYPE=Debug",
            ".."
        ],
      },
      {
        "label": "run the makefile",
        "type": "shell",
        "options": {
            "cwd": "${workspaceFolder}/build"
        },
        "command": "make", //its like writing in console make //btw you can others commands like clean make build etc
        "problemMatcher": [],
        "dependsOrder": "sequence",
        "dependsOn": [
            "create build directory",
            "(debug) cmake debug"
        ]
      },
      {
          "label": "build tests",
          "type": "shell",
          "options": {
              "cwd": "${workspaceFolder}"
          },
          "command": "mkdir -p build && cd build && cmake -DCMAKE_BUILD_TYPE=Debug .. && make tests",
          "group": "build",
          "presentation": {
              "echo": true,
              "reveal": "always",
              "focus": false,
              "panel": "shared"
          },
          "problemMatcher": ["$gcc"]
      }
    ]
  }